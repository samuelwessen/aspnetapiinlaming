@page "/createserviceworker"
@inject HttpClient Http

<h1>Sign Up</h1>

<EditForm Model="signup" OnSubmit="@CreateServiceWorkerAsync">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="First name" @bind="signup.FirstName" required />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Last name" @bind="signup.LastName" required />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email" @bind="signup.Email" required />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Password" @bind="signup.Password" required />
    </div> 

    <div class="form-group">
        <button type="submit" class="btn btn-success">Create Service Worker</button>
    </div>
</EditForm>




@code {
    private SignUp signup;

    
    

    private async Task CreateServiceWorkerAsync()
    {
        await Http.PostAsJsonAsync<SignUp>("https://localhost:44385/api/ServiceWorkers/SignUp", signup);
        signup = new SignUp();        
    }

    protected override void OnInitialized()
    {
        signup = new SignUp();
    }
}
